<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp" />
            <gradient android:angle="135" android:centerColor="@android:color/holo_orange_light" android:endColor="@android:color/holo_orange_dark" android:startColor="@android:color/holo_orange_dark" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#FBB719" />
        </shape>
    </item>

</selector>